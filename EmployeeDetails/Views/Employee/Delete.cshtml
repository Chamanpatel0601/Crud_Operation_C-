@model EmployeeDetails.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div style="text-align: right; margin-bottom: 10px;">
    <label class="switch">
        <input type="checkbox" id="modeToggle">
        <span class="slider round"></span>
    </label>
</div>

<h1 class="text-center text-danger"><i class="fas fa-trash-alt"></i> Delete</h1>

<h3 class="text-center text-warning">Are you sure you want to delete this?</h3>

<div class="delete-box">
    <h4 class="section-title">Employee</h4>
    <hr />
    <dl class="row details-section">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Department)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Department.Id)</dd>
    </dl>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger delete-btn" />
        <a asp-action="Index" class="btn btn-secondary back-btn">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background: linear-gradient(to right, #fdfcfb, #e2d1c3);
        font-family: 'Segoe UI', sans-serif;
        transition: background 0.4s ease;
    }

        body.dark-mode {
            background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
            color: #f0f0f0;
        }

    h1, h3, .section-title {
        font-weight: bold;
    }

    .delete-box {
        max-width: 700px;
        margin: auto;
        background-color: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.4s ease;
    }

    body.dark-mode .delete-box {
        background-color: #2c3e50;
    }

    .details-section dt {
        font-weight: bold;
        color: #2c3e50;
    }

    body.dark-mode .details-section dt {
        color: #ecf0f1;
    }

    .delete-btn {
        padding: 10px 25px;
        font-weight: bold;
        border-radius: 8px;
        transition: 0.3s ease;
        box-shadow: 0px 0px 5px rgba(220, 53, 69, 0.6);
    }

        .delete-btn:hover {
            background-color: #c82333;
            transform: scale(1.05);
        }

    .back-btn {
        margin-left: 15px;
        padding: 10px 25px;
        font-weight: bold;
        border-radius: 8px;
        transition: 0.3s ease;
    }

        .back-btn:hover {
            background-color: #6c757d;
            transform: scale(1.05);
            box-shadow: 0px 0px 5px rgba(108, 117, 125, 0.6);
        }

    /* Toggle switch */
    .switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 25px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 34px;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 20px;
            width: 20px;
            left: 3px;
            bottom: 2.5px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: #2196F3;
    }

        input:checked + .slider:before {
            transform: translateX(24px);
        }
</style>

<script>
    document.getElementById("modeToggle").addEventListener("change", function () {
        document.body.classList.toggle("dark-mode");
    });
</script>
