@model EmployeeDetails.Models.User
@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #ff9a9e, #fad0c4, #fbc2eb, #a6c1ee);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .form-container {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }

    .form-box {
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        width: 350px;
        text-align: center;
        margin-top: 20px;
    }

    .toggle-btn {
        background: linear-gradient(45deg, #ff6ec4, #7873f5);
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        cursor: pointer;
        font-size: 16px;
        margin-bottom: 20px;
    }

    form {
        display: none;
        margin-top: 10px;
    }

        form.active {
            display: block;
        }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: 600;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

    .btn-submit {
        background: #7873f5;
        border: none;
        color: white;
        padding: 10px 20px;
        width: 100%;
        border-radius: 25px;
        cursor: pointer;
        font-size: 16px;
    }

    /* Dark mode styles */
    body.dark {
        background: linear-gradient(135deg, #2c3e50, #4ca1af);
        color: #ffffff;
    }

        body.dark .form-box {
            background: #444;
        }

        body.dark .form-group input {
            background: #555;
            color: #fff;
            border: 1px solid #666;
        }

        body.dark .btn-submit {
            background: #4ca1af;
        }

    /* Welcome message styling */
    .welcome-message {
        font-size: 28px;
        font-weight: bold;
        color: #ffffff;
        margin-bottom: 30px;
        text-align: center;
    }
</style>

<!-- Welcome Message -->
<div class="welcome-message">
    Welcome to Our Portal! Please Login or Register.
</div>

<!-- Form Centered -->
<div class="form-container">
    <div class="form-box">
        <button class="toggle-btn" onclick="toggleForm()">Switch to Register</button>

        <!-- Login Form -->
        <form id="loginForm" asp-action="Login" asp-controller="Account" method="post" class="active">
            <h2>Login</h2>
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" placeholder="Enter Email" required />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" name="password" placeholder="Enter Password" required />
            </div>
            <button type="submit" class="btn-submit">Login</button>
        </form>

        <!-- Register Form -->
        <form id="registerForm" asp-action="Register" asp-controller="Account" method="post">
            <h2>Register</h2>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" placeholder="Enter Email" required />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" type="password" placeholder="Enter Password" required />
            </div>
            <button type="submit" class="btn-submit">Register</button>
        </form>
    </div>
</div>

<script>
    function toggleForm() {
        var loginForm = document.getElementById('loginForm');
        var registerForm = document.getElementById('registerForm');
        var toggleBtn = document.querySelector('.toggle-btn');

        if (loginForm.classList.contains('active')) {
            loginForm.classList.remove('active');
            registerForm.classList.add('active');
            toggleBtn.innerText = "Switch to Login";
        } else {
            registerForm.classList.remove('active');
            loginForm.classList.add('active');
            toggleBtn.innerText = "Switch to Register";
        }
    }

    function toggleMode() {
        document.body.classList.toggle('dark');
    }
</script>-

